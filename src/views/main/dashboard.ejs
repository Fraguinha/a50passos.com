<%- include("../partials/_header.ejs") %>

<main>
  <div class="bg-light">
    <div class="container">
      <div class="row">
        <form class="form-style mt-4" action="/login/logout" method="POST">
          <button class="btn btn-lg btn-danger btn-block" type="submit">
            Logout
          </button>
        </form>
      </div>
      <div class="row">
        <div class="col-md-3">
          <hr />
          <form
            class="form-control-file"
            action="/dashboard/addPhoto1"
            method="POST"
            enctype="multipart/form-data"
          >
            <h2 class="text-center">Upload foto 1</h2>
            <hr />
            <input type="file" name="photo1" multiple required />
            <hr />
            <button class="btn btn-lg btn-primary btn-block" type="submit">
              Upload foto
            </button>
            <hr />
            <div class="background-white">
              <img src="uploads/photo1.jpg" height="200" width="100%" />
            </div>
          </form>
        </div>
        <div class="col-md-3">
          <hr />
          <form
            class="form-control-file"
            action="/dashboard/addPhoto2"
            method="POST"
            enctype="multipart/form-data"
          >
            <h2 class="text-center">Upload foto 2</h2>
            <hr />
            <input type="file" name="photo2" multiple required />
            <hr />
            <button class="btn btn-lg btn-primary btn-block" type="submit">
              Upload foto
            </button>
            <hr />
            <div class="background-white">
              <img src="uploads/photo2.jpg" height="200" width="100%" />
            </div>
          </form>
        </div>
        <div class="col-md-3">
          <hr />
          <form
            class="form-control-file"
            action="/dashboard/addPhoto3"
            method="POST"
            enctype="multipart/form-data"
          >
            <h2 class="text-center">Upload foto 3</h2>
            <hr />
            <input type="file" name="photo3" multiple required />
            <hr />
            <button class="btn btn-lg btn-primary btn-block" type="submit">
              Upload foto
            </button>
            <hr />
            <div class="background-white">
              <img src="uploads/photo3.jpg" height="200" width="100%" />
            </div>
          </form>
        </div>
        <div class="col-md-3">
          <hr />
          <form
            class="form-control-file"
            action="/dashboard/addPhoto4"
            method="POST"
            enctype="multipart/form-data"
          >
            <h2 class="text-center">Upload foto 4</h2>
            <hr />
            <input type="file" name="photo4" multiple required />
            <hr />
            <button class="btn btn-lg btn-primary btn-block" type="submit">
              Upload foto
            </button>
            <hr />
            <div class="background-white">
              <img src="uploads/photo4.jpg" height="200" width="100%" />
            </div>
          </form>
        </div>
      </div>
      <div class="row">
        <form class="form-style" action="/dashboard/clearImages" method="POST">
          <small class="form-text text-muted text-center"
            >Limpa todas as imagens uploaded</small
          >
          <button class="btn btn-lg btn-warning btn-block" type="submit">
            Clear
          </button>
        </form>
      </div>
      <hr />
      <div class="row">
        <div class="col-md-4">
          <button
            class="btn btn-success btn-block"
            data-toggle="modal"
            data-target="#modalAddHouse"
          >
            Adicionar Casa
          </button>
          <form action="/dashboard/addHouse" method="POST">
            <div id="modalAddHouse" class="modal fade" role="dialog">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title">Adicionar casa</h4>
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                      <label for="id">ID</label>
                      <input
                        name="id"
                        type="text"
                        class="form-control"
                        placeholder="ID a adicionar (optional)"
                      />
                      <small class="form-text text-muted"
                        >Disponivel apenas para a conveniência do
                        utilizador</small
                      >
                    </div>
                    <hr />
                    <div class="form-group">
                      <label for="title">Titulo *</label>
                      <input
                        name="title"
                        type="text"
                        class="form-control"
                        placeholder="Titulo"
                        required
                      />
                    </div>
                    <div class="form-group">
                      <label for="address">Morada *</label>
                      <input
                        name="address"
                        type="text"
                        class="form-control"
                        placeholder="Morada"
                        required
                      />
                    </div>
                    <div class="form-group">
                      <label for="description">Descrição</label>
                      <textarea
                        name="description"
                        type="text"
                        class="form-control"
                        placeholder="Descrição"
                        style="resize: none"
                      ></textarea>
                    </div>
                    <div class="form-group">
                      <label for="tip">Tooltip</label>
                      <input
                        name="tip"
                        type="text"
                        class="form-control"
                        placeholder="Tooltip"
                      />
                    </div>
                    <div class="form-group">
                      <label for="wc">WC *</label>
                      <input
                        name="wc"
                        type="number"
                        min="1"
                        class="form-control"
                        placeholder="Nr"
                        required
                      />
                    </div>
                    <div class="form-group">
                      <label for="type">Tipo *</label>
                      <input
                        name="type"
                        type="number"
                        min="1"
                        max="2"
                        class="form-control"
                        placeholder="Tipo"
                        required
                      />
                      <small class="form-text text-muted"
                        >1 - Quarto<br />2 - Apartamento</small
                      >
                    </div>
                    <small class="form-text text-muted"
                      >* Campos obrigatórios</small
                    >
                    <hr />
                    <div class="form-group form-check">
                      <input
                        id="suite"
                        name="suite"
                        type="checkbox"
                        class="form-check-input"
                      />
                      <label class="form-check-label" for="suite">Suite</label>
                    </div>
                    <div class="form-group form-check">
                      <input
                        id="elevator"
                        name="elevator"
                        type="checkbox"
                        class="form-check-input"
                      />
                      <label class="form-check-label" for="elevator"
                        >Elevador</label
                      >
                    </div>
                    <div class="form-group form-check">
                      <input
                        id="dinningroom"
                        name="dinningroom"
                        type="checkbox"
                        class="form-check-input"
                      />
                      <label class="form-check-label" for="dinningroom"
                        >Sala de jantar</label
                      >
                    </div>
                    <div class="form-group form-check">
                      <input
                        id="balcony"
                        name="balcony"
                        type="checkbox"
                        class="form-check-input"
                      />
                      <label class="form-check-label" for="balcony"
                        >Varanda</label
                      >
                    </div>
                    <div class="form-group form-check">
                      <input
                        id="gardin"
                        name="gardin"
                        type="checkbox"
                        class="form-check-input"
                      />
                      <label class="form-check-label" for="gardin"
                        >Terraço</label
                      >
                    </div>
                    <small class="form-text text-muted"
                      >Selecione os que se aplicam</small
                    >
                  </div>
                  <div class="modal-footer">
                    <small class="form-text text-muted text-center"
                      >A casa apenas será adicionada se tiverem sido adicionadas
                      4 fotos</small
                    >
                    <button
                      class="btn btn-lg btn-success btn-block"
                      type="submit"
                    >
                      Adicionar casa
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </form>
          <hr />
          <button
            class="btn btn-danger btn-block"
            data-toggle="modal"
            data-target="#modalRemoveHouse"
          >
            Remover Casa
          </button>
          <form action="/dashboard/removeHouse" method="POST">
            <div id="modalRemoveHouse" class="modal fade" role="dialog">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title">Remover Casa</h4>
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                      <label for="id">ID *</label>
                      <input
                        name="id"
                        type="text"
                        class="form-control"
                        placeholder="ID a remover"
                        required
                      />
                      <small class="form-text text-muted"
                        >* Campo obrigatório</small
                      >
                    </div>
                  </div>
                  <div class="modal-footer">
                    <small class="form-text text-muted text-center"
                      >Elimina a casa permanentemente</small
                    >
                    <button
                      class="btn btn-lg btn-danger btn-block"
                      type="submit"
                    >
                      Remover casa
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </form>
          <hr />
        </div>
        <div class="col-md-4">
          <button
            class="btn btn-primary btn-block"
            data-toggle="modal"
            data-target="#modalToggleHouse"
          >
            Alternar Disponibilidade
          </button>
          <form action="/dashboard/toggleHouse" method="POST">
            <div id="modalToggleHouse" class="modal fade" role="dialog">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title">Alternar Disponibilidade</h4>
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                      <label for="id">ID *</label>
                      <input
                        name="id"
                        type="text"
                        class="form-control"
                        placeholder="ID a alternar disponibilidade"
                        required
                      />
                      <small class="form-text text-muted"
                        >* Campo obrigatório</small
                      >
                    </div>
                  </div>
                  <div class="modal-footer">
                    <small class="form-text text-muted text-center"
                      >Muda entre disponivel e indisponivel</small
                    >
                    <button
                      class="btn btn-lg btn-success btn-block"
                      type="submit"
                    >
                      Alternar disponibilidade
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </form>
          <hr />
          <button
            class="btn btn-primary btn-block"
            data-toggle="modal"
            data-target="#modalSetNumber"
          >
            Editar Nº Quartos Geridos
          </button>
          <form action="/dashboard/setNumber" method="POST">
            <div id="modalSetNumber" class="modal fade" role="dialog">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title">Editar Nº Quartos Geridos</h4>
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                      <label for="number">Numero *</label>
                      <input
                        name="number"
                        type="number"
                        min="1"
                        class="form-control"
                        placeholder="Novo numero"
                        required
                      />
                      <small class="form-text text-muted"
                        >* Campo obrigatório</small
                      >
                    </div>
                  </div>
                  <div class="modal-footer">
                    <small class="form-text text-muted text-center"
                      >Altera o numero de quartos controlados</small
                    >
                    <button
                      class="btn btn-lg btn-success btn-block"
                      type="submit"
                    >
                      Alterar numero
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </form>
          <hr />
        </div>
        <div class="col-md-4">
          <button
            class="btn btn-success float-right btn-block"
            data-toggle="modal"
            data-target="#modalEditHouse"
          >
            Editar Casa
          </button>
          <form action="/dashboard/editHouse" method="POST">
            <div id="modalEditHouse" class="modal fade" role="dialog">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title">Editar casa</h4>
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                      <label for="id">ID *</label>
                      <input
                        name="id"
                        type="text"
                        class="form-control"
                        placeholder="ID a editar"
                      />
                      <small class="form-text text-muted"
                        >* Campo obrigatório</small
                      >
                    </div>
                    <hr />
                    <div class="form-group">
                      <label for="title">Titulo</label>
                      <input
                        name="title"
                        type="text"
                        class="form-control"
                        placeholder="Titulo (optional)"
                      />
                    </div>
                    <div class="form-group">
                      <label for="address">Morada</label>
                      <input
                        name="address"
                        type="text"
                        class="form-control"
                        placeholder="Morada (optional)"
                      />
                    </div>
                    <div class="form-group">
                      <label for="description">Descrição</label>
                      <textarea
                        name="description"
                        type="text"
                        class="form-control"
                        placeholder="Descrição (optional)"
                        style="resize: none"
                      ></textarea>
                    </div>
                    <div class="form-group">
                      <label for="tip">Tooltip</label>
                      <input
                        name="tip"
                        type="text"
                        class="form-control"
                        placeholder="Tooltip (optional)"
                      />
                    </div>
                    <div class="form-group">
                      <label for="wc">WC</label>
                      <input
                        name="wc"
                        type="number"
                        min="1"
                        class="form-control"
                        placeholder="Nr (optional)"
                      />
                    </div>
                    <small class="form-text text-muted"
                      >Todos estes campos são opcionais, apenas os que alterar
                      serão actualizados</small
                    >
                    <hr />
                    <div class="form-group form-check">
                      <input
                        id="suite"
                        name="suite"
                        type="checkbox"
                        class="form-check-input"
                      />
                      <label class="form-check-label" for="suite"
                        >Suite<small class="text-muted text-center">
                          (Opcional)</small
                        ></label
                      >
                    </div>
                    <div class="form-group form-check">
                      <input
                        id="elevator"
                        name="elevator"
                        type="checkbox"
                        class="form-check-input"
                      />
                      <label class="form-check-label" for="elevator"
                        >Elevador<small class="text-muted text-center">
                          (Opcional)</small
                        ></label
                      >
                    </div>
                    <div class="form-group form-check">
                      <input
                        id="dinningroom"
                        name="dinningroom"
                        type="checkbox"
                        class="form-check-input"
                      />
                      <label class="form-check-label" for="dinningroom"
                        >Sala de jantar<small class="text-muted text-center">
                          (Opcional)</small
                        ></label
                      >
                    </div>
                    <div class="form-group form-check">
                      <input
                        id="balcony"
                        name="balcony"
                        type="checkbox"
                        class="form-check-input"
                      />
                      <label class="form-check-label" for="balcony"
                        >Varanda<small class="text-muted text-center">
                          (Opcional)</small
                        ></label
                      >
                    </div>
                    <div class="form-group form-check">
                      <input
                        id="gardin"
                        name="gardin"
                        type="checkbox"
                        class="form-check-input"
                      />
                      <label class="form-check-label" for="gardin"
                        >Terraço<small class="text-muted text-center">
                          (Opcional)</small
                        ></label
                      >
                    </div>
                    <small class="form-text text-muted"
                      >Selecione os que se aplicam</small
                    >
                    <hr />
                    <div class="form-group form-check">
                      <input
                        id="checkbox"
                        name="checkbox"
                        type="checkbox"
                        class="form-check-input"
                      />
                      <label class="form-check-label" for="checkbox"
                        >Actualizar checkboxes?</label
                      >
                      <small class="form-text text-muted"
                        >Se estiver selecionado, a casa será actualizada com os
                        valores das checkboxes em cima</small
                      >
                    </div>
                  </div>
                  <div class="modal-footer">
                    <small class="form-text text-muted text-center"
                      >A casa será actualizada com os novos parametros e fotos
                      especificados</small
                    >
                    <button
                      class="btn btn-lg btn-success btn-block"
                      type="submit"
                    >
                      Editar casa
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </form>
          <hr />
        </div>
      </div>
      <hr />
    </div>
  </div>
</main>
