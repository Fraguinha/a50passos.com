<div class="col-md-4">
  <div class="card mb-4 shadow">
    <% if (house.available) { %>
    <a href="/house/<%= house.id %>">
      <img src="<%= house.photo1 %>"
           onerror="this.src='/images/logo/50passos.png'; style='background-color:whitesmoke'"
           width="100%"
           height="225">
      <% if (Date.now() - house.date < 1000 * 60 * 60 * 24 * 5) { %>
      <div class="banner-style-catalog-new">
        <h1 class="text-center text-white badge badge-info badge-style-catalog-new">
          <strong>Novo</strong>
        </h1>
      </div>
      <% } %>
    </a>
    <% } else { %>
    <a href="/house/<%= house.id %>">
      <img src="<%= house.photo1 %>"
           onerror="this.src='/images/logo/50passos.png'; style='background-color:whitesmoke'"
           width="100%"
           height="225">
      <div class="banner-style-catalog">
        <h1 class="text-center text-white badge badge-danger badge-style-catalog">
          <strong>JÃ¡ Foi!</strong>
        </h1>
      </div>
    </a>
    <% } %>
    <div class="card-body">
      <p class="card-text">
        <%= house.title %>
        <img class="img-fluid float-right"
             width="40px"
             src="../../images/logo/50passos.png">
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <a href="/house/<%= house.id %>"
             class="btn btn-sm btn-outline-blue">Ver mais</a>
        </div>
        <% if (house.available) { %>
        <% if (house.tip.length <=30) { %>
        <small class="text-secondary">
          <%= house.tip %>
        </small>
        <% } else { %>
        <small class="text-secondary">
          <%= house.tip.substring(0, 30) + "..." %>
        </small>
        <% } %>
        <% } else { %>
        <small class="text-danger">Arrendado</small>
        <% } %>
      </div>
    </div>
  </div>
</div>
