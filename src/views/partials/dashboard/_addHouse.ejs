<form action="/dashboard/addHouse" method="POST">
  <div id="modalAddHouse" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Adicionar casa</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="id">ID</label>
            <input
              name="id"
              type="text"
              class="form-control"
              placeholder="ID a adicionar (optional)"
            />
            <small class="form-text text-muted"
              >Disponivel apenas para a conveniência do utilizador</small
            >
          </div>
          <hr />
          <div class="form-group">
            <label for="title">Titulo *</label>
            <input
              name="title"
              type="text"
              class="form-control"
              placeholder="Titulo"
              required
            />
          </div>
          <div class="form-group">
            <label for="address">Morada *</label>
            <input
              name="address"
              type="text"
              class="form-control"
              placeholder="Morada"
              required
            />
          </div>
          <div class="form-group">
            <label for="description">Descrição</label>
            <textarea
              name="description"
              type="text"
              class="form-control"
              placeholder="Descrição"
              style="resize: none"
            ></textarea>
          </div>
          <div class="form-group">
            <label for="tip">Tooltip</label>
            <input
              name="tip"
              type="text"
              class="form-control"
              placeholder="Tooltip"
            />
          </div>
          <div class="form-group">
            <label for="wc">WC *</label>
            <input
              name="wc"
              type="number"
              min="1"
              class="form-control"
              placeholder="Nr"
              required
            />
          </div>
          <div class="form-group">
            <label for="type">Tipo *</label>
            <input
              name="type"
              type="number"
              min="1"
              max="2"
              class="form-control"
              placeholder="Tipo"
              required
            />
            <small class="form-text text-muted"
              >1 - Quarto<br />2 - Apartamento</small
            >
          </div>
          <small class="form-text text-muted">* Campos obrigatórios</small>
          <hr />
          <div class="form-group form-check">
            <input
              id="suite"
              name="suite"
              type="checkbox"
              class="form-check-input"
            />
            <label class="form-check-label" for="suite">Suite</label>
          </div>
          <div class="form-group form-check">
            <input
              id="elevator"
              name="elevator"
              type="checkbox"
              class="form-check-input"
            />
            <label class="form-check-label" for="elevator">Elevador</label>
          </div>
          <div class="form-group form-check">
            <input
              id="dinningroom"
              name="dinningroom"
              type="checkbox"
              class="form-check-input"
            />
            <label class="form-check-label" for="dinningroom"
              >Sala de jantar</label
            >
          </div>
          <div class="form-group form-check">
            <input
              id="balcony"
              name="balcony"
              type="checkbox"
              class="form-check-input"
            />
            <label class="form-check-label" for="balcony">Varanda</label>
          </div>
          <div class="form-group form-check">
            <input
              id="gardin"
              name="gardin"
              type="checkbox"
              class="form-check-input"
            />
            <label class="form-check-label" for="gardin">Terraço</label>
          </div>
          <small class="form-text text-muted"
            >Selecione os que se aplicam</small
          >
        </div>
        <div class="modal-footer">
          <small class="form-text text-muted text-center"
            >A casa apenas será adicionada se tiverem sido adicionadas 4
            fotos</small
          >
          <button class="btn btn-lg btn-success btn-block" type="submit">
            Adicionar casa
          </button>
        </div>
      </div>
    </div>
  </div>
</form>
