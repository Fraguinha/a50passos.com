<form
  action="/dashboard/toggleHouse"
  method="POST"
>
  <input
    type="hidden"
    name="id"
    value="<%= data.id %>"
  />
  <% if (data.available) { %>
  <button
    type="button"
    class="btn btn-danger mx-1 float-right"
    data-toggle="modal"
    data-target="#toggleModal"
  >
    <i class="bi bi-toggle2-on"></i>
  </button>
  <% } else { %>
  <button
    type="button"
    class="btn btn-success mx-1 float-right"
    data-toggle="modal"
    data-target="#toggleModal"
  >
    <i class="bi bi-toggle2-off"></i>
  </button>
  <% } %>
  <div
    class="modal fade"
    id="toggleModal"
    tabindex="-1"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5
            class="modal-title"
            id="exampleModalLabel"
          >
            Alterar disponibilidade
          </h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
          >
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >
            Fechar
          </button>
          <button
            type="submit"
            class="btn btn-success"
          >Alterar</button>
        </div>
      </div>
    </div>
  </div>
</form>
